<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.auth.mapper.ApplianceMapper">

    <select id="findAll" resultType="com.example.auth.dto.ApplianceDto">
        SELECT id, name, brand, price, description
        FROM appliance
    </select>

    <select id="findById" parameterType="string" resultType="com.example.auth.dto.ApplianceDto">
        SELECT id, name, brand, price, description
        FROM appliance
        WHERE id = #{id}
    </select>

</mapper>
